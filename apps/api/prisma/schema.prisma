// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url = "file:./sqlite.db"
}

model Streamer {
  id Int @default(autoincrement()) @id
  name String
  description String
  platform String // should be enum, but SQLite not supports enums
  image String
  votes Vote[]
}

model Vote {
  id Int @default(autoincrement()) @id
  ip String
  streamer Streamer @relation(fields: [streamerId], references: [id])
  streamerId Int
}