{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": [".env", "**/.env.*local"],
    "pipeline": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": [".next/**", "!.next/cache/**"]
        },
        "lint": {},
        "dev": {
            "cache": false,
            "persistent": true
        }
    },
    "globalEnv": ["NEXT_PUBLIC_APP_URL", "NEXT_PUBLIC_API_URL"]
}
